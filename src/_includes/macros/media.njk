{% macro image(src, alt, caption) %}
    <figure class="max-w-full mx-auto my-5">
        <img class="h-auto max-w-full rounded-lg"
            src="{{ src }}"
            alt="{{ alt }}">
        <figcaption
            class="mt-2 text-sm text-center text-gray-500 dark:text-gray-400">{{ caption | safe }}
        </figcaption>
    </figure>
{% endmacro %}