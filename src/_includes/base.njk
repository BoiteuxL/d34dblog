<!DOCTYPE html>
<html lang="{{ page.lang }}" dir="{{ languages[page.lang].dir }}" data-theme="light">
    <head>
        <!-- TITLE -->
        <title>
            {% if title %}
                {{ title }} | {{ meta.title }}
            {% else %}
                {{ meta.title }}
            {% endif %}
        </title>

        <!-- META -->
        <meta name="description" content="{{ description }}"/>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="canonical" href="{{ meta.url }}{{ page.url }}"/>
        <link rel="alternate" hreflang="{{ page.lang }}" href="{{ meta.url }}{{ page.url }}"/>

        
        <!-- IMPORTATIONS -->
        {% for link in page.url | locale_links %}
            <link rel="alternate" hreflang="{{ link.lang }}" href="{{ meta.url }}{{ link.url }}"/>
        {% endfor %}
        <script type="module" src="/scripts/main.js"></script>
        <link rel="stylesheet" href="/assets/css/styles.css">
    </head>
    <body>
        {% include "components/header.njk" %}
        <main class="mx-auto main-container">
            {{ content | safe }}
        </main>
        {% include "components/footer.njk" %}
    </body>
</html>